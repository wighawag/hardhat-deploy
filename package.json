{
  "name": "hardhat-deploy-monorepo",
  "private": true,
  "description": "deployment plugin for hardhat",
  "type": "module",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "ezx": "^0.0.18",
    "prettier": "^3.8.1",
    "prettier-plugin-solidity": "^2.2.1",
    "set-defaults": "^0.0.5",
    "syncpack": "^13.0.4",
    "vitepress": "^1.6.4",
    "zellij-launcher": "^0.0.1"
  },
  "volta": {
    "node": "22.14.0"
  },
  "packageManager": "pnpm@10.28.1",
  "scripts": {
    "prepare": "set-defaults .vscode",
    "prepublishOnly": "pnpm build",
    "release": "pnpm prepublishOnly && git push --all && pnpm changeset publish && git push --tags",
    "docs:dev": "vitepress dev",
    "docs:build": "pnpm prepare && vitepress build",
    "docs:preview": "vitepress preview",
    "prepublish": "pnpm build",
    "build": "pnpm -r build && cp ./README.md ./packages/hardhat-deploy/",
    "dev": "pnpm -r dev",
    "sync-deps": "syncpack fix-mismatches",
    "test": "pnpm -r test",
    "test:installation": "ezx --verbose --cwd /tmp documentation/installation.md",
    "format": "prettier --write \"packages/*/src/**/*.ts\" \"demoes/*/src/**\"",
    "format:check": "prettier --check \"packages/*/src/**/*.ts\" \"demoes/*/src/**\"",
    "start": "pnpm zellij-launcher --layout zellij.kdl a $npm_package_name || zellij --layout zellij.kdl -s $npm_package_name"
  }
}
