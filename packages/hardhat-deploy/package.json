{
	"name": "hardhat-deploy",
	"version": "2.0.0-next.61",
	"description": "deployment plugin for hardhat",
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "dist/esm/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/esm/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/esm/index.d.ts",
				"default": "./dist/esm/index.js"
			}
		},
		"./helpers": {
			"import": {
				"types": "./dist/esm/helpers.d.ts",
				"default": "./dist/esm/helpers.js"
			}
		}
	},
	"files": [
		"dist",
		"src",
		"bin",
		"templates"
	],
	"bin": {
		"hardhat-deploy": "./dist/esm/cli.js"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@rocketh/node": "0.17.15",
		"@types/node": "^25.0.6",
		"as-soon": "^0.0.11",
		"hardhat": "3.1.3",
		"rimraf": "^6.1.2",
		"rocketh": "0.17.12",
		"set-defaults": "^0.0.5",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"@rocketh/node": "^0.17.15",
		"hardhat": "^3.1.3"
	},
	"dependencies": {
		"@nomicfoundation/hardhat-zod-utils": "3.0.1",
		"@types/debug": "^4.1.12",
		"commander": "^12.1.0",
		"debug": "^4.4.3",
		"named-logs-console": "^0.5.1",
		"slash": "^5.1.0",
		"zod": "^3.25.76"
	},
	"scripts": {
		"prepublish": "cp ../../README.md ./",
		"prepare": "pnpm build",
		"build": "tsc --project tsconfig.json",
		"dev": "as-soon -w src pnpm build"
	}
}
