{
	"name": "hardhat-deploy",
	"version": "2.0.0-next.65",
	"description": "deployment plugin for hardhat",
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./helpers": {
			"import": {
				"types": "./dist/helpers.d.ts",
				"default": "./dist/helpers.js"
			}
		}
	},
	"files": [
		"dist",
		"src",
		"bin",
		"templates"
	],
	"bin": {
		"hardhat-deploy": "./dist/cli.js"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@rocketh/node": "0.17.18",
		"@types/node": "^25.0.10",
		"as-soon": "^0.1.5",
		"hardhat": "3.1.5",
		"rimraf": "^6.1.2",
		"rocketh": "0.17.15",
		"set-defaults": "^0.0.5",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"@rocketh/node": "^0.17.18",
		"hardhat": "^3.1.5"
	},
	"dependencies": {
		"@nomicfoundation/hardhat-zod-utils": "3.0.1",
		"@types/debug": "^4.1.12",
		"commander": "^14.0.2",
		"debug": "^4.4.3",
		"named-logs-console": "^0.5.1",
		"slash": "^5.1.0",
		"zod": "^4.3.6"
	},
	"scripts": {
		"prepublishOnly": "node scripts/copy-cleaned-template.js && cp ../../README.md ./",
		"prepare": "pnpm build",
		"build": "tsc --project tsconfig.json",
		"dev": "as-soon -w src pnpm build"
	}
}
